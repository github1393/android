<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="enter number"
              android:id="@+id/editt1"

            />
    <LinearLayout android:layout_gravity="center" android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

        <Button android:layout_width="30pt"
                android:id="@+id/btn0"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:text="@string/ziro"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="30pt"
                android:id="@+id/btn1"
                android:layout_marginTop="50dp"
                android:text="@string/one"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="30pt"
                android:id="@+id/btn2"
                android:layout_marginTop="50dp"
                android:text="@string/two"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="30pt"
                android:layout_marginTop="50dp"
                android:id="@+id/btn3"
                android:text="@string/three"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:layout_width="30pt"
                android:layout_marginLeft="50dp"
                android:id="@+id/btn4"
                android:text="@string/fore"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="30pt"
                android:id="@+id/btn5"
                android:text="@string/five"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="30pt"
                android:text="@string/sex"
                android:id="@+id/btn6"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="30pt"
                android:text="@string/seven"
                android:id="@+id/btn7"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:layout_width="30pt"
                android:layout_marginLeft="50dp"
                android:text="@string/eght"
                android:id="@+id/btn8"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="30pt"
                android:text="@string/nine"
                android:id="@+id/btn9"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="30pt"
                android:text="@string/dot"
                android:id="@+id/btndot"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="30pt"
                android:text="@string/mosavi"
                android:id="@+id/btnmo"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:layout_width="30pt"
                android:layout_marginLeft="50dp"
                android:text="@string/sum"
                android:id="@+id/btnsum"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="30pt"
                android:text="@string/sub"
                android:id="@+id/btnsub"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="30pt"
                android:text="@string/zarb"
                android:id="@+id/btnzarb"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="30pt"
                android:text="@string/taghsim"
                android:id="@+id/btntagh"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:layout_width="30pt"
                    android:layout_marginLeft="50dp"
                    android:text="clear"
                    android:id="@+id/btnclear"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>





